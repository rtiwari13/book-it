generator client {
  provider = "prisma-client-js"
//  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Experience {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String?
  priceCents  Int
  imageUrl    String?
  location    String?
  createdAt   DateTime @default(now())
  slots       Slot[]
}

model Slot {
  id           Int      @id @default(autoincrement())
  experience   Experience @relation(fields: [experienceId], references: [id])
  experienceId Int
  slotDate     DateTime
  slotTime     String
  capacity     Int      @default(20)
  bookings     Booking[]
  @@unique([experienceId, slotDate, slotTime])
}

model Booking {
  id           Int      @id @default(autoincrement())
  slot         Slot       @relation(fields: [slotId], references: [id])
  slotId       Int
  fullName     String
  email        String
  qty          Int
  subtotalCents Int
  taxesCents   Int
  totalCents   Int
  promoCode    String?
  refId        String?
  createdAt    DateTime  @default(now())
}

model Promo {
  code   String  @id
  type   String  
  value  Int     
  active Boolean @default(true)
}
